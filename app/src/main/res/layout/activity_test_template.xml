<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/func1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        tools:visibility="visible">

        <TextView
            android:id="@+id/func1_name"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            tools:visibility="visible" />

        <EditText
            android:id="@+id/func1_param"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/func1_exec"
            android:layout_toRightOf="@id/func1_name"
            android:background="@null"
            android:gravity="center_vertical"
            tools:visibility="visible" />

        <Button
            android:id="@+id/func1_exec"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:text="上报"
            tools:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/func2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/func1"
        tools:visibility="visible">

        <TextView
            android:id="@+id/func2_name"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            tools:visibility="visible" />

        <EditText
            android:id="@+id/func2_param"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/func2_exec"
            android:layout_toRightOf="@id/func2_name"
            android:background="@null"
            android:gravity="center_vertical"
            tools:visibility="visible" />

        <Button
            android:id="@+id/func2_exec"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:text="上报"
            tools:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/func3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/func2"
        android:visibility="gone">

        <TextView
            android:id="@+id/func3_name"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/func3_param"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/func3_exec"
            android:layout_toRightOf="@id/func3_name"
            android:background="@null"
            android:gravity="center_vertical"
            android:visibility="invisible" />

        <Button
            android:id="@+id/func3_exec"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:text="上报"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/func4"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/func3"
        android:visibility="gone">

        <TextView
            android:id="@+id/func4_name"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical" />

        <EditText
            android:id="@+id/func4_param"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/func4_exec"
            android:layout_toRightOf="@id/func4_name"
            android:background="@null"
            android:gravity="center_vertical" />

        <Button
            android:id="@+id/func4_exec"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:text="上报" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/func5"
        android:layout_below="@id/func4"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:visibility="gone">
        <TextView
            android:id="@+id/func5_name"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"/>
        <EditText
            android:layout_toRightOf="@id/func5_name"
            android:layout_toLeftOf="@+id/func5_exec"
            android:id="@+id/func5_param"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:background="@null"/>
        <Button
            android:id="@+id/func5_exec"
            android:layout_alignParentRight="true"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="上报"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/func6"
        android:layout_below="@id/func5"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:visibility="gone">
        <TextView
            android:id="@+id/func6_name"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"/>
        <EditText
            android:layout_toRightOf="@id/func6_name"
            android:layout_toLeftOf="@+id/func6_exec"
            android:id="@+id/func6_param"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:background="@null"/>
        <Button
            android:id="@+id/func6_exec"
            android:layout_alignParentRight="true"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="上报"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="207dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="   环境温度："
                android:textSize="36sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="   环境湿度："
                android:textSize="36sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="   土壤温度："
                android:textSize="36sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="   土壤湿度："
                android:textSize="36sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="   光照强度："
                android:textSize="36sp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   水泵状态："
                android:textSize="36sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/envir_temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/envir_humi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/soil_temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/soil_humi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="36sp" />

            <Switch
                android:id="@+id/water_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="水泵关"
                android:textSize="36sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>