    <TextView
        android:id="@+id/id_start_LP"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/normalbutton_background"
        android:gravity="center"
        android:text="物模型接入示例"
        android:textColor="@drawable/normalbutton_textcolor"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/id_start_label"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/normalbutton_background"
        android:gravity="center"
        android:text="设备标签"
        android:textColor="@drawable/normalbutton_textcolor"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/id_start_cota"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="COTA"
        android:textColor="@drawable/normalbutton_textcolor"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/et_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="请输入您的账号"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="请输入您的密码"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/id_start_shadow"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/normalbutton_background"
        android:gravity="center"
        android:text="设备影子"
        android:textColor="@drawable/normalbutton_textcolor"
        android:visibility="invisible" />

