    <TextView
        android:id="@+id/id_mqtt_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/normalbutton_background"
        android:gravity="center"
        android:text="登陆"
        android:textColor="@drawable/normalbutton_textcolor"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/id_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/normalbutton_background"
        android:gravity="center"
        android:text="注册"
        android:textColor="@drawable/normalbutton_textcolor"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/id_start_gateway"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/normalbutton_background"
        android:gravity="center"
        android:text="网关接入示例"
        android:textColor="@drawable/normalbutton_textcolor"
        android:visibility="invisible" />

    <CheckBox
        android:id="@+id/cb_remember"
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:text="记住用户名和密码"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/id_start_ota"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/normalbutton_background"
        android:gravity="center"
        android:text="OTA示例"
        android:textColor="@drawable/normalbutton_textcolor"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/id_start_breeze_ota"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/normalbutton_background"
        android:gravity="center"
        android:text="Breeze 子设备 OTA示例"
        android:textColor="@drawable/normalbutton_textcolor"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/id_start_h2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/normalbutton_background"
        android:gravity="center"
        android:text="H2 示例"
        android:textColor="@drawable/normalbutton_textcolor"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/id_start_h2_file"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/normalbutton_background"
        android:gravity="center"
        android:text="H2文件上传示例"
        android:textColor="@drawable/normalbutton_textcolor"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/id_test_init"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/normalbutton_background"
        android:gravity="center"
        android:text="初始化"
        android:textColor="@color/red"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/id_test_deinit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/normalbutton_background"
        android:gravity="center"
        android:text="反初始化"
        android:textColor="@color/red"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/id_test_reset"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/normalbutton_background"
        android:gravity="center"
        android:text="设备重置,结束后会退出应用"
        android:textColor="@color/red"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/id_error_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:background="@drawable/normalbutton_background"
        android:gravity="center_vertical"
        android:textColor="@color/red"
        android:textSize="40dp"
        android:visibility="gone" />
</LinearLayout>